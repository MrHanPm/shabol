@import "../list/list.wxss";
.phone{
    position: fixed;
    left:0;
    bottom:0;
    padding:0 20px;
    width: 100%;
    height:100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
    color:#fff;
    background: #1AAD19
}
.phone:after{
    position:absolute;
    right:20px;
    top:50%;
    content:"";
    width:80rpx;
    height:80rpx;
    border-radius: 50%;
    transform: translate(0,-50%);
    background:url("https://s.kcimg.cn/app/images/matching/phone_new.png") no-repeat 50% 50%;
    background-size: 34rpx 32rpx;
}
